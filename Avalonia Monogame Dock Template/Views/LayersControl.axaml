<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 xmlns:viewModels="clr-namespace:Avalonia_Monogame_Dock_Template.ViewModels"
			 xmlns:iconPacks="https://github.com/MahApps/IconPacks.Avalonia"
			 x:DataType="viewModels:LayersViewModel"
             x:Class="Avalonia_Monogame_Dock_Template.Views.LayersControl">
	<Grid RowDefinitions="*,48">
		<Border Grid.Row="0" BorderThickness="1" BorderBrush="#888888" Margin="5">
			<ListBox x:Name="LayersListBox"
					 ItemsSource="{Binding Layers}"
					 SelectedItem="{Binding SelectedLayer, Mode=TwoWay}">
				<ListBox.ItemTemplate>
					<DataTemplate>
						<WrapPanel
							Opacity="{Binding ViewportVisible, Converter={StaticResource BooleanToBrushConverter}}"
							FlowDirection="LeftToRight"
							Height="18">
							<Button
								Content="{iconPacks:BoxIcons RegularShow,Width=10,Height=10}"
								Command="{Binding ToggleViewportVisible}"
								Background="Transparent"
								Opacity="{Binding ViewportVisible, Converter={StaticResource BooleanToBrushConverter}}"
								Padding="4"
								Margin="0,0,0,0" />
							<Button
								Content="{iconPacks:BoxIcons RegularCamera,Width=10,Height=10}"
								Command="{Binding ToggleRenderVisible}"
								Background="Transparent"
								Opacity="{Binding RenderVisible, Converter={StaticResource BooleanToBrushConverter}}"
								Padding="4"
								Margin="0,0,5,0" />
							<TextBlock Text="{Binding Name}" HorizontalAlignment="Left" FontSize="14" Padding="0" />
						</WrapPanel>
					</DataTemplate>
				</ListBox.ItemTemplate>
			</ListBox>
		</Border>
		<!-- Tlačidlá pre operácie s vrstvami -->
		<StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Left">
			<Button Content="{iconPacks:BoxIcons RegularLayerPlus,Width=16,Height=16}" ToolTip.Tip="New layer" Click="AddLayer_OnClick" Margin="5"/>
			<Button Content="{iconPacks:BoxIcons RegularLayerMinus,Width=16,Height=16}" ToolTip.Tip="Delete layer" Click="RemoveLayer_OnClick" Margin="5"/>
			<Button Content="{iconPacks:BoxIcons RegularUpArrowAlt,Width=16,Height=16}" ToolTip.Tip="Move up layer" Click="MoveUpLayer_OnClick" Margin="5"/>
			<Button Content="{iconPacks:BoxIcons RegularDownArrowAlt,Width=16,Height=16}" ToolTip.Tip="Move down layer" Click="MoveDownLayer_OnClick" Margin="5"/>
		</StackPanel>
	</Grid>
</UserControl>
