<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:views="clr-namespace:Avalonia_Monogame_Dock_Template.Views"
             xmlns:viewModels="clr-namespace:Avalonia_Monogame_Dock_Template.ViewModels"
             xmlns:monogame="clr-namespace:Avalonia_Monogame_Dock_Template.Monogame"
             mc:Ignorable="d"
             d:DesignWidth="800"
             d:DesignHeight="450"
             x:Class="Avalonia_Monogame_Dock_Template.Views.MonoGameEngine"
             x:CompileBindings="True"
			 PointerExited="UserControl_PointerLeave"
             x:DataType="viewModels:MonoGameViewModel">

	<Design.DataContext>
		<!-- Nastavenie DataContext iba pre dizajnér -->
		<views:MonoGameEngine />
	</Design.DataContext>

	<!-- **KOREŇOVÝ ELEMENT** -->
	<Grid>
		<TextBlock Text="aaa"/>
		<monogame:MonoGameControl Grid.Row="1"
                                  Game="{Binding Game}"
                                  DefaultBackground="CornflowerBlue"
                                  ClipToBounds="True"
                                  IsPaused="False"/>
	</Grid>

</UserControl>